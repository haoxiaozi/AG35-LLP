[ -n "$D" ] && OPT="-r $D" || OPT="-s"
        # remove all rc.d-links potentially created from alternatives
        update-rc.d $OPT -f tftp_server.sh remove
        update-rc.d $OPT tftp_server.sh start 20 2 3 4 5 .
if type update-rc.d >/dev/null 2>/dev/null; then
	if [ -n "$D" ]; then
		OPT="-r $D"
	else
		OPT="-s"
	fi
	update-rc.d $OPT tftp_server.sh start 20 2 3 4 5 .
fi
